{{page-title "Zoeken"}}
<AuMainContainer as |m|>
  <m.sidebar>
    <Sidebar>
      <div class="au-c-sidebar__content" tabindex="-1">
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Zoekterm</f.legend>
            <f.content>
              <span class="au-c-pill-container">
                <span class="au-c-pill au-c-pill--default">
                  test zoek
                </span>
                <LinkTo @route="messages.index" class="au-c-pill-action  au-c-pill--default">
                  <AuIcon @icon="cross" />
                  <span class="au-u-hidden-visually">close</span>
                </LinkTo>
              </span>
            </f.content>
          </AuFieldset>
        </div>
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__section-title">
            Periode
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Deze maand
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Dit kwartaal
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Dit jaar
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            {{#if (eq this.dateFilter true)}}
            <div class="au-c-list-navigation__form">
              <AuLabel>Specifiek</AuLabel>
              <AuDateInput/>
            </div>
            {{else}}
            <AuNavigationLink role="menuitem" {{on 'click' this.toggleDateFilter}}> 
              Specifiek
            </AuNavigationLink>
            {{/if}}
          </li>
        </ul>
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__section-title">
            Thema/type
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Omzendbrief
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Notificatie
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Richtlijn
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink role="menuitem">
              Klacht
            </AuNavigationLink>
          </li>
        </ul>
      </div>
    </Sidebar>
  </m.sidebar>
  <m.content>  
    <AuBodyContainer class="au-u-background-gray-100" >
      <AuToolbar @border="bottom" @size="small" as |Group|>
        <Group class="au-u-1-1">
          <div class="c-navigation-search">
            <div>
              <AuLabel for="search">Trefwoord</AuLabel>
              <AuInput id="search" @width="block" value="zoek test" />
            </div>
            <AuLink @skin="button" @route="messages.search" @icon="search">
              Zoek
            </AuLink>
          </div>
          </Group>
      </AuToolbar>
      <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group>
          <p class="au-u-h6">3 resultaten voor <strong>'zoek test'</strong></p>
        </Group>
      </AuToolbar>
      <AuBodyContainer @scroll={{true}}>
        <div class="au-o-box au-o-box--small">
          <AuList as |listitem|>
            {{#each this.data as |item|}}
            <listitem>
              <AuCard @size="small" class="c-overview-card" as |card|>
                <card.header class="au-u-padding-bottom-none">
                  <div class="c-overview-card__header">
                    <div class="au-u-flex au-u-flex--vertical-center au-u-flex--spaced-tiny">
                      <AuLink @route="messages.detail" class="au-u-h6 au-u-medium c-overview-card__link">
                        {{item.name}}
                      </AuLink>
                    </div>
                  </div>
                </card.header>
                <card.content>
                  <p class="au-u-h-functional au-u-margin-bottom-tiny">{{item.description}}</p>
                  <p class="au-u-h-functional au-u-muted au-u-margin-top-tiny">Laatst aangepast: {{item.date}} - Door {{item.person}}</p>
                </card.content>
              </AuCard>
            </listitem>
            {{/each}}
          </AuList>
        </div>
      </AuBodyContainer>
      {{!-- <Pagination /> --}}
    </AuBodyContainer>
  </m.content>
</AuMainContainer>