{{page-title "Index"}}
<AuBodyContainer @scroll={{true}}>
  <div class="au-o-box">
    <AuContent class="au-u-margin-bottom">
      <AuCard @standOut={{true}} as |c|>
        <c.content>
          <div class="au-o-grid au-o-grid--small">
            <div class="au-o-grid__item au-u-1-3@medium">
              <p class="au-u-h6">
                <strong>Periode:</strong> 2022
                <AuHelpText @skin="secondary" class="au-u-margin-top-none">
                  01 november 2022 - 31 december 2023
                </AuHelpText>
              </p>
            </div>
            <div class="au-o-grid__item au-u-1-3@medium">
              <p class="au-u-h6"><strong>Deadline:</strong> 06 december 2023</p>
            </div>
            <div class="au-o-grid__item au-u-1-3@medium au-u-text-right@medium">
              <AuPill @skin="border">
              Jeugd
            </AuPill>
            </div>
          </div>
        </c.content>
      </AuCard>
    </AuContent>
    <AuList @divider={{true}} as |ListItem|>
      {{#each this.news as |item|}}
      <ListItem>
        <RichLink @new={{item.new}} @title={{item.title}} @info={{item.date}} @icon={{item.icon}} />
      </ListItem>
      {{/each}}
    </AuList>
  </div>
</AuBodyContainer>