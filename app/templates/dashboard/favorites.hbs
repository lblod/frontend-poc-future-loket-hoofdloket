{{page-title "Favorieten"}}
<AuMainContainer as |m|>
  <m.sidebar>
    <Sidebar>
      <div class="au-c-sidebar__content">
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__item">
            <AuNavigationLink @route="dashboard.index" role="menuitem">
              <AuIcon @icon="tiles" @alignment="left" />
              Overzicht
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink @route="dashboard.favorites" role="menuitem">
              <AuIcon @icon="star-filled" @alignment="left" />
              Favorieten
            </AuNavigationLink>
          </li>
        </ul>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Type</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="Subsidies"
                @name="Checkboxs"
                @value="Subsidies"
                @identifier="Subsidies"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Premies"
                @name="Checkboxs"
                @value="Premies"
                @identifier="Premies"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Vergunningen"
                @name="Checkboxs"
                @value="Vergunningen"
                @identifier="Vergunningen"
                @checked={{false}}
                @disabled= {{false}}
              />
            </f.content>
          </AuFieldset>
        </div>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Thematisch</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="Jeugd"
                @name="Checkboxs"
                @value="Jeugd"
                @identifier="Jeugd"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Cultuur"
                @name="Checkboxs"
                @value="Cultuur"
                @identifier="Cultuur"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Sport"
                @name="Checkboxs"
                @value="Sport"
                @identifier="Sport"
                @checked={{false}}
                @disabled= {{false}}
              />
            </f.content>
          </AuFieldset>
        </div>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Deadline</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="Deze maand"
                @name="Checkboxs"
                @value="Deze maand"
                @identifier="Deze maand"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Dit kwartaal"
                @name="Checkboxs"
                @value="Dit kwartaal"
                @identifier="Dit kwartaal"
                @checked={{false}}
                @disabled= {{false}}
              />
            </f.content>
          </AuFieldset>
        </div>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Aanbieder</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="ABB"
                @name="Checkboxs"
                @value="ABB"
                @identifier="ABB"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Opgroeien"
                @name="Checkboxs"
                @value="Opgroeien"
                @identifier="Opgroeien"
                @checked={{false}}
                @disabled= {{false}}
              />
            </f.content>
          </AuFieldset>
        </div>

      </div>
    </Sidebar>
  </m.sidebar>
  <m.content>
    <AuBodyContainer class="au-u-background-gray-100" >
       <AuToolbar @border="bottom" @size="small" as |Group|>
        <Group class="au-u-1-1">
          <div class="c-navigation-search">
            <div>
              <AuLabel for="search">Trefwoord</AuLabel>
              <AuInput id="search" @width="block" />
            </div>
            <AuLink @skin="button" @route="dashboard.search" @icon="search">
              Zoek
            </AuLink>
          </div>
          </Group>
      </AuToolbar>
      {{!-- <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group>
          <p class="au-u-h6">2346 resultaten voor <strong>'zoekterm'</strong></p>
        </Group>
      </AuToolbar> --}}
      <AuBodyContainer @scroll={{true}}>
        <div class="au-o-box au-o-box--small">
          <AuList as |listitem|>
            {{#each this.product as |item|}}
            <listitem>
              <AuCard @size="small" class="c-overview-card" as |card|>
                <card.header class="au-u-padding-bottom-none">
                  <div class="c-overview-card__header">
                    <div class="au-u-flex au-u-flex--vertical-center au-u-flex--spaced-tiny">
                      <Favorite @active={{true}} />
                      <AuLinkExternal href={{item.link}} class="au-u-h6 au-u-medium c-overview-card__link">
                        {{item.name}}
                      </AuLinkExternal>
                    </div>
                    <div class="au-u-flex au-u-flex--spaced-tiny">
                      {{#if item.deadline}}
                      <AuPill @skin="warning" @size="small">Deadline: {{item.deadline}}</AuPill>
                      {{/if}}
                      <AuPill @skin="border" @size="small">
                        {{item.categorie}}
                      </AuPill>
                    </div>
                  </div>
                </card.header>
                <card.content>
                  <p class="au-u-h-functional au-u-margin-bottom-tiny">{{item.description}}</p>
                  <p class="au-u-h-functional au-u-margin-top-tiny">
                     <AuLinkExternal @icon="external-link" @iconAlignment="right" href={{item.link}} class="c-external">
                      Naar de tool
                    </AuLinkExternal>
                  </p>
                </card.content>
              </AuCard>
            </listitem>
            {{/each}}
          </AuList>
        </div>
      </AuBodyContainer>
      {{!-- <Pagination /> --}}
    </AuBodyContainer>
  </m.content>
</AuMainContainer>