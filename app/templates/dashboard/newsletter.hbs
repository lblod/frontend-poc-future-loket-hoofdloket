{{page-title "Notificaties"}}
<AuMainContainer class="au-u-background-gray-100" as |m|>
  <m.content>
    <div class="c-layout">
      <div class="c-layout__main-left">
        <div class="au-o-box au-o-flow">
          <AuHeading @level="2" @skin="3">Updates</AuHeading>
          <AuList @divider={{true}} as |ListItem|>
            {{#each this.news as |item|}}
            <ListItem>
              <RichLink @new={{item.new}} @title={{item.title}} @info={{item.date}} @icon={{item.icon}} />
            </ListItem>
            {{/each}}
          </AuList>
        </div>
       </div>
      <div class="c-layout__aside-right">
        <div class="au-o-box au-o-flow">
         <AuHeading @level="2" @skin="4">Nieuwsbrief</AuHeading>
          <form class="au-c-form">
            <AuFieldset as |f|>
              <f.legend>Hoe vaak wilt u de nieuwsbrief ontvangen?</f.legend>
              <f.content>
                <AuControlRadio
                  @label="Elke dag"
                  @name="radios"
                  @value="radioOne"
                  @identifier="radioOne"
                  @checked={{true}}
                  @disabled= {{false}}
                />
                <AuControlRadio
                  @label="Elke week"
                  @name="radios"
                  @value="radioTwo"
                  @identifier="radioTwo"
                  @checked={{false}}
                  @disabled= {{false}}
                />
                <AuControlRadio
                  @label="Elke maand"
                  @name="radios"
                  @value="radioThree"
                  @identifier="radioThree"
                  @checked={{false}}
                  @disabled= {{false}}
                />
                <AuControlRadio
                  @label="Nooit"
                  @name="radios"
                  @value="radioFour"
                  @identifier="radioFour"
                  @checked={{false}}
                  @disabled= {{false}}
                />
              </f.content>
            </AuFieldset>
            <AuFieldset as |f|>
              <f.legend>Waarover wil je de nieuwsbrief ontvangen?</f.legend>
              <f.content>
                <AuControlCheckbox
                  @label="Subsidies"
                  @name="Checkboxs"
                  @value="CheckboxOne"
                  @identifier="CheckboxOne"
                  @checked={{true}}
                  @disabled= {{false}}
                />
                <AuControlCheckbox
                  @label="Berichten"
                  @name="Checkboxs"
                  @value="CheckboxTwo"
                  @identifier="CheckboxTwo"
                  @checked={{true}}
                  @disabled= {{false}}
                />
                <AuControlCheckbox
                  @label="Databronnen"
                  @name="Checkboxs"
                  @value="CheckboxThree"
                  @identifier="CheckboxThree"
                  @checked={{true}}
                  @disabled= {{false}}
                />
                <AuControlCheckbox
                  @label="Rapportering"
                  @name="Checkboxs"
                  @value="CheckboxFour"
                  @identifier="CheckboxFour"
                  @checked={{true}}
                  @disabled= {{false}}
                />
              </f.content>
            </AuFieldset>
            <AuFormRow @alignment="default">
              <AuLabel for="textarea">
                Textarea
              </AuLabel>
              <AuTextarea id="textarea" @width="block"></AuTextarea>
            </AuFormRow>
            <AuFormRow>
              <AuButtonGroup>
                <AuButton @disabled={{true}}>
                  Wijzigingen opslaan
                </AuButton>
              </AuButtonGroup>
            </AuFormRow>
          </form>
        </div>
      </div>
    </div>
  </m.content>
</AuMainContainer>