<AuMainContainer as |m|>
  <m.sidebar>
    <Sidebar>
      <div class="au-c-sidebar__content">
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__item">
            <AuNavigationLink @route="dashboard.index" role="menuitem">
              <AuIcon @icon="tiles" @alignment="left" />
              Overzicht
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink @route="dashboard.favorites" role="menuitem">
              <AuIcon @icon="star-filled" @alignment="left" />
              Favorieten
            </AuNavigationLink>
          </li>
        </ul>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Type</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="Tools"
                @name="Checkbox1"
                @value="tools"
                @identifier="tools"
                @checked={{this.filters.tools}}
                @disabled={{false}}
                @onChange={{fn this.updateFilter 'tools'}}
              />
              <AuControlCheckbox
                @label="Subsidies"
                @name="Checkbox2"
                @value="Subsidies"
                @identifier="Subsidies"
                @checked={{false}}
                @disabled= {{false}}
                @checked={{this.filters.tools}}
                @disabled={{false}}
                @onChange={{fn this.updateFilter 'subsidies'}}
              />
              {{!-- <AuControlCheckbox
                @label="Premies"
                @name="Checkbox3"
                @value="Premies"
                @identifier="Premies"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Vergunningen"
                @name="Checkbox4"
                @value="Vergunningen"
                @identifier="Vergunningen"
                @checked={{false}}
                @disabled= {{false}}
              /> --}}
            </f.content>
          </AuFieldset>
        </div>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Thematisch</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="Burger en Overheid"
                @name="CheckboxB1"
                @value="Burger en Overheid"
                @identifier="Burger en Overheid"
                @checked={{this.filters.burger}}
                @disabled={{false}}
                @onChange={{fn this.updateFilter 'burger'}}
              />
              <AuControlCheckbox
                @label="Financieel voordeel"
                @name="CheckboxB2"
                @value="Financieel voordeel"
                @identifier="Financieel voordeel"
                @checked={{this.filters.financieel}}
                @disabled={{false}}
                @onChange={{fn this.updateFilter 'financieel'}}
              />
              {{!-- <AuControlCheckbox
                @label="Sport"
                @name="CheckboxA3"
                @value="Sport"
                @identifier="Sport"
                @checked={{false}}
                @disabled= {{false}}
              /> --}}
            </f.content>
          </AuFieldset>
        </div>
        <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Deadline</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="Deze maand"
                @name="Checkboxs"
                @value="Deze maand"
                @identifier="Deze maand"
                @checked={{this.filters.month}}
                @disabled={{false}}
                @onChange={{fn this.updateFilter 'month'}}
              />
              <AuControlCheckbox
                @label="Dit kwartaal"
                @name="Checkboxs"
                @value="Dit kwartaal"
                @identifier="Dit kwartaal"
                @checked={{this.filters.quart}}
                @disabled={{false}}
                @onChange={{fn this.updateFilter 'quart'}}
              />
            </f.content>
          </AuFieldset>
        </div>
        {{!-- <div class="au-o-box au-o-box--small">
          <AuFieldset as |f|>
            <f.legend>Aanbieder</f.legend>
            <f.content>
              <AuControlCheckbox
                @label="ABB"
                @name="Checkboxs"
                @value="ABB"
                @identifier="ABB"
                @checked={{false}}
                @disabled= {{false}}
              />
              <AuControlCheckbox
                @label="Opgroeien"
                @name="Checkboxs"
                @value="Opgroeien"
                @identifier="Opgroeien"
                @checked={{false}}
                @disabled= {{false}}
              />
            </f.content>
          </AuFieldset>
        </div> --}}

      </div>
    </Sidebar>
  </m.sidebar>
  <m.content>
    <AuBodyContainer class="au-u-background-gray-100" >
       <AuToolbar @border="bottom" @size="small" as |Group|>
        <Group class="au-u-1-1">
          <div class="c-navigation-search">
            <div>
              <AuLabel for="search">Trefwoord</AuLabel>
              <AuInput id="search" @width="block" />
            </div>
            <AuLink @skin="button" @route="dashboard.search" @icon="search">
              Zoek
            </AuLink>
          </div>
          </Group>
      </AuToolbar>
      {{!-- <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group>
          <p class="au-u-h6">2346 resultaten voor <strong>'zoekterm'</strong></p>
        </Group>
      </AuToolbar> --}}
      <AuBodyContainer @scroll={{true}}>
        <div class="au-o-box au-o-box--small">
          <AuList as |listitem|>
            {{#each @model as |publicService|}}
              {{!-- TODO: item.favorite --}}
              {{!-- TODO: item.categorie --}}
              {{!-- TODO: item.deadline --}}
              {{!-- TODO: item.description --}}
              {{!-- TODO: item.link --}}
              {{!-- TODO: item.type --}}
              {{!-- TODO: sanitize publicService.description --}}
              <listitem>
              <AuCard @size="small" class="c-overview-card" as |card|>
                <card.header class="au-u-padding-bottom-none">
                  <div class="c-overview-card__header">
                    <div class="au-u-flex au-u-flex--vertical-center au-u-flex--spaced-tiny">
                      <Favorite @active={{publicService.favorite}} />
                      <AuLinkExternal href={{publicService.link}} class="au-u-h6 au-u-medium c-overview-card__link">
                        {{publicService.name.default}}
                      </AuLinkExternal>
                    </div>
                    <div class="au-u-flex au-u-flex--spaced-tiny">
                      {{#if publicService.type}}
                      {{#if publicService.deadline}}
                      <AuPill @skin="warning" @size="small">Deadline: {{publicService.deadline}}</AuPill>
                      {{else}}
                      <AuPill @skin="default" @size="small">Doorlopend inschrijven</AuPill>
                      {{/if}}
                      {{/if}}
                      {{#if publicService.categorie}}
                      <AuPill @skin="border" @size="small">
                        {{publicService.categorie}}
                      </AuPill>
                      {{else}}
                      <AuPill @skin="border" @size="small">
                        {{publicService.type}}
                      </AuPill>
                      {{/if}}
                    </div>
                  </div>
                </card.header>
                <card.content>
                  <p class="au-u-h-functional au-u-margin-bottom-tiny">{{{publicService.description.default}}}</p>
                  <p class="au-u-h-functional au-u-margin-top-tiny">
                     <AuLinkExternal @icon="external-link" @iconAlignment="right" href={{publicService.link}} class="c-external">
                      Naar de {{#if publicService.categorie}}tool{{else}}subsidie{{/if}}
                    </AuLinkExternal>
                  </p>
                </card.content>
              </AuCard>
            </listitem>
            {{else}}
            <AuAlert
              @title="Niet gevonden wat je zocht?"
              @skin={{this.skin}}
              @icon="circle-question"
              @size={{this.size}}
              @closable={{this.closable}}
              @onClose={{this.onClose}}
            >
              <p>Laat ons weten welke diensten je mist op <a href="#!" class="au-c-link">LoketLokaalBestuur@vlaanderen.be.</a></p>
            </AuAlert>
            {{/each}}
          </AuList>
        </div>
      </AuBodyContainer>
      {{!-- <Pagination /> --}}
    </AuBodyContainer>
  </m.content>
</AuMainContainer>