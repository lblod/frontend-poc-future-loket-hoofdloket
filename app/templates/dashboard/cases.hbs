{{page-title "Cases"}}
<AuMainContainer as |m|>
  <m.sidebar>
    <div class="au-c-sidebar">
      <div class="au-c-sidebar__content">
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__item">
            <AuNavigationLink @route="dashboard.cases">
              <AuIcon @icon="subsidies" @alignment="left" />
              Overzicht
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              <AuIcon @icon="folder" @alignment="left" />
              Mijn subsidies
            </AuNavigationLink>
          </li>
        </ul>
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__section-title">
            Thema's
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Jeugd
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Sport
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Cultuur
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Vrije tijd
            </AuNavigationLink>
          </li>
        </ul>
        <ul class="au-c-list-navigation">
          <li class="au-c-list-navigation__section-title">
            Deadline
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Deze maand
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Dit kwartaal
            </AuNavigationLink>
          </li>
          <li class="au-c-list-navigation__item">
            <AuNavigationLink>
              Specifiek
            </AuNavigationLink>
          </li>
        </ul>
      </div>
    </div>
  </m.sidebar>
  <m.content>  
    <AuBodyContainer class="au-u-background-gray-100" >
      {{outlet}}
      <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group>
          <AuHeading @skin="5">Lopende Subsidies</AuHeading>
        </Group>
      </AuToolbar>
      <div class="au-o-box au-o-box--small">
        <AuList as |listitem|>
          <listitem>
            <AuCard @size="small" class="c-overview-card" as |card|>
              <card.header>
                <div class="au-u-flex au-u-flex--between au-u-flex--vertical-center au-u-flex--spaced">
                  <AuLink class="au-u-h5 au-u-medium c-overview-card__link">
                    Erkenning en subsidiÃ«ring van een landelijk georganiseerde jeugdvereniging
                  </AuLink>
                  <AuPill @skin="success" @draft={{true}}>
                    Ingediend
                  </AuPill>
                </div>
              </card.header>
            </AuCard>
          </listitem>
        </AuList>
        <p class="au-u-h-functional">
          <AuLink @skin="button-naked" @icon="clock-rewind" @iconAlignment="left" class="c-card-link">
            Historiek
          </AuLink>
        </p>
      </div>
      <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group>
          <AuHeading @skin="5">234 subsidies beschikbaar</AuHeading>
        </Group>
      </AuToolbar>
      <AuBodyContainer @scroll={{true}}>
        <div class="au-o-box au-o-box--small">
          <AuList as |listitem|>
            {{#each this.subsidies as |item|}}
            <listitem>
              <AuCard @size="small" class="c-overview-card" as |card|>
                <card.header>
                  <div class="au-u-flex au-u-flex--between au-u-flex--vertical-center au-u-flex--spaced">
                    <div class="au-u-flex au-u-flex--vertical-center au-u-flex--spaced-tiny">
                      <Favorite />
                      <AuLink class="au-u-h5 au-u-medium c-overview-card__link">
                        {{item.name}}
                      </AuLink>
                    </div>
                    <AuPill @skin="border">
                      {{item.category}}
                    </AuPill>
                  </div>
                </card.header>
                <card.content class="au-o-flow">
                  <p class="au-u-h-functional"><strong>Deadline:</strong> {{item.deadline}}</p>
                  <p class="au-u-h-functional">
                    <AuLinkExternal @icon="external-link" @iconAlignment="right" href={{item.link}} class="c-external">
                      Meer info 
                    </AuLinkExternal>
                  </p>
                </card.content>
              </AuCard>
            </listitem>
            {{/each}}
          </AuList>
        </div>
      </AuBodyContainer>
      <Pagination />
    </AuBodyContainer>
  </m.content>
</AuMainContainer>